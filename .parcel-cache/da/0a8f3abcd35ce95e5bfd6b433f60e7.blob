.app-container {
  display: flex;
  justify-content: space-between;
  background-color: rgb(218, 80, 80);
  width: 100%;
  height: 100vh;
}

.column-one {
  display: flex;
  flex-direction: column;
  background-color: azure;
  align-items: center;
  flex-grow: 2;
}

.column-two {
  display: flex;
  flex-direction: column;
  background-color: aliceblue;
  flex-grow: 1;
}
