  width: 100%;
  margin: 0 5%;
}

nav {
  display: flex;
  justify-content: space-evenly;
  /* margin: "0 30%"; */
}

.message-instance {
  background-color: rgb(150, 225, 235);
  padding: 0 10px;
  margin-top: 5px;
  border-radius: 10px;
  position: relative;
}

.message-instance:before,
.message-instance:after {
  z-index: -1;
  position: absolute;
  content: "";
  bottom: 15px;
  left: 10px;
  width: 50%;
  top: 80%;
  max-width: 300px;
  background: #777;
  -webkit-box-shadow: 0 15px 10px #777;
  -moz-box-shadow: 0 15px 10px #777;
  box-shadow: 0 15px 10px #777;
  -webkit-transform: rotate(-3deg);
  -moz-transform: rotate(-3deg);
  -o-transform: rotate(-3deg);
  -ms-transform: rotate(-3deg);
  transform: rotate(-3deg);
}
.message-instance:after {
  -webkit-transform: rotate(3deg);
  -moz-transform: rotate(3deg);
  -o-transform: rotate(3deg);
  -ms-transform: rotate(3deg);
  transform: rotate(3deg);
  right: 10px;
  left: auto;
}

.messages {
  display: flex;
  flex-direction: column;
  border: 1px solid black;
  height: 70vh;
  overflow: scroll;
  background-color: white;
  padding: 10px;
}

.form-styling {
  text-align: center;
}

input[type="text"] {
  width: 100%;
